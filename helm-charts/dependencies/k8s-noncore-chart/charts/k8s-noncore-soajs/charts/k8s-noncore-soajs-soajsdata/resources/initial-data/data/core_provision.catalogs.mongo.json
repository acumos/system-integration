{
  "_id": "5df3ec10fa3912534948f003",
  "name": "Mongo DB",
  "type": "cluster",
  "subtype": "mongo",
  "description": "Deploy single instance of Mongo DB",
  "locked": true,
  "restriction": {
    "deployment": [
      "container"
    ]
  },
  "recipe": {
    "deployOptions": {
      "image": {
        "prefix": "",
        "name": "mongo",
        "tag": "{{ .Values.catalogTag.mongo }}",
        "pullPolicy": "Always",
        "repositoryType": "public",
        "override": true
      },
      "sourceCode": {},
      "readinessProbe": {
        "exec": {
          "command": [
            "mongo"
          ],
          "args": [
            "--eval \"db.adminCommand('ping')\""
          ]
        },
        "initialDelaySeconds": 5,
        "timeoutSeconds": 2,
        "periodSeconds": 5,
        "successThreshold": 1,
        "failureThreshold": 3
      },
      "restartPolicy": {
        "condition": "any",
        "maxAttempts": 5
      },
      "container": {
        "network": "soajsnet",
        "workingDir": ""
      },
      "voluming": [
        {
          "docker": {
            "volume": {
              "Type": "volume",
              "Source": "dashboard-soajsdata",
              "Target": "/data/db/"
            }
          },
          "kubernetes": {
            "volume": {
              "name": "dashboard-soajsdata",
              "hostPath": {
                "path": "/var/data/db/"
              }
            },
            "volumeMount": {
              "mountPath": "/var/data/db/",
              "name": "dashboard-soajsdata"
            }
          }
        }
      ],
      "ports": [
        {
          "name": "mongoport",
          "containerPort": 27017
        }
      ],
      "certificates": "none"
    },
    "buildOptions": {
      "env": {},
      "cmd": {
        "deploy": {
          "command": [
            "mongod"
          ],
          "args": [
            "--bind_ip",
            "0.0.0.0"
          ]
        }
      }
    }
  },
  "v": 1,
  "ts": 1591189951674
}
